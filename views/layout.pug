  body
    link(rel='stylesheet', href='/stylesheets/index.css')
    .navbar
      .navbar-header
        a.navbar-brand(href='../')
          img(src='/images/logo.svg')
      .navbar-center
        a(style='font-weight: 700 !important;' href='../') Ascent
      .navbar-body
        ul.nav.navbar-nav
          if !user
            li.hideon-sw.register(class =(title == 'Register' ? 'active' : ''))
              a(href='/users/register') register
            li.login.hideon-sw(class =(title == 'Login' ? 'active' : ''))
              a(href='/users/login') login
          else
            if user
              li.hideon-sw
                a(href='/users/logout') logout
          li.menu
              i(class='material-icons') menu
    .customsidenav
      .content.container
        if !user
          li.register(class =(title == 'Register' ? 'active' : ''))
            a(href='/users/register') register
          li.login(class =(title == 'Login' ? 'active' : ''))
            a(href='/users/login') login
        if user
          li
            a(href='/') my account
        li
          a(href='/') gifts
        li
          a(href='/scents/men') men
        li
          a(href='/scents/women') women
        if user
          li
            a(href='/') quiz!
        if user
          li
            a(href='/users/logout') logout
    block content
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js")
    script(src='../javascripts/ui.js')