doctype html
html
  head
    title= title
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, user-scalable=no")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css")
    link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
    link(rel="icon" href="../images/logo.png")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css")
    link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
    link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
  body
    link(rel='stylesheet', href='/stylesheets/index.css')
    .navbar
      .navbar-header.flex
        a.navbar-brand(href='../').flex
          img.logoimg(src='/images/logo.png')
      .navbar-center
        a(style='font-weight: 700 !important;' href='../') Ascent
      .navbar-body
        ul.nav.navbar-nav
          if !user
            li.login(class =(title == 'Login' ? 'active' : ''))
              a(href='/users/login').flex
                i(class='material-icons') person
          else
            if user
              li.hideon-sw
                a(href='/users/logout') logout
              li.flex.hideon-sw
                a(href='/scents/cart').flex
                  i(class="material-icons") shopping_cart
          li.menu
              i(class='material-icons') menu
    .customsidenav
      .content.container
        if !user
          li.register(class =(title == 'Register' ? 'active' : ''))
            a(href='/users/register') register
          li.login(class =(title == 'Login' ? 'active' : ''))
            a(href='/users/login') login
        if user
          li
            a(href='/myaccount') my account
        li
          a(href='/scents/men') men
        li
          a(href='/scents/women') women
        li
          a(href='/scents/abonaments') abonaments
        if user
          li.flex.showon-sw
            a(href='/scents/cart').flex
                i(class="material-icons") shopping_cart
          li.showon-sw
            a(href='/users/logout') logout
        if user
          if user.status != 'verified'
            li
              a.verify(href='/verify') verify account
    .messages(style='position: absolute;')
      != messages()
      if user
        if user.status != 'verified'
          li(style='  list-style: none !important;')
            a.verify(href='/verify') Verify your account!
    block content
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js")
    script(src='../javascripts/ui.js')