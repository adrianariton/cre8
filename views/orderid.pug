extends layout

block content
    .mainmyacc.andu.andu-unfix
        .container.myacc
            .header
                .header-head
                    img(src='/images/user-alt.png')
                    .uinfo
                        span.name Order: #{order.id}
                        span.datecreated Ordered #{order.dateCreated}
            .body
                if order.status == 'canceled'
                    .section
                        .title Status 
                        .content 
                            .title2(style='color:red !important;') Order was canceled!
                .section
                    .title User Info
                    .content 
                        .title2 User: #{user.name} #{user.vorname}
                        .title2 Email: #{order.email}
                .section
                    .title Shipping Info
                    .content 
                        .title2 #{order.shipping.name}
                        .title2 Address: #{order.shipping.address.line1}, #{order.shipping.address.city}, #{order.shipping.address.state}, #{order.shipping.address.country}
                        .title2 Postal Code: #{order.shipping.address.postal_code}
                        .title2 Delivery Method: #{order.deliverymethod == 'postro' ? 'Posta Romana': 'Curier' }
                - var totalprod = 0
                - var totalabon = 0
                
                .section 
                    .title Ordered Products
                    .content
                        for prod in order.products
                            .ab-group
                                .titleimg
                                    .image-cropper
                                        img(src = '/images/'+ productArr.find(el => el.id == prod.id).image style='border-radius: 50% !important; margin: 5px;')
                                    .title2 #{productArr.find(el => el.id == prod.id).name}
                                .quan 
                                    - var price = 0
                                    if order.products[0].price
                                        - price = order.products.find(el => el.id == prod.id).price
                                    else 
                                        - price = productArr.find(el => el.id == prod.id).price
                                    span Quantity #{prod.quantity}
                                    - totalprod+=prod.quantity*price/100
                                    span Price #{prod.quantity} x #{price/100}=Lei#{prod.quantity*price/100}
                if order.capsulesCount > 0
                    .section 
                        .title 
                        .content 
                            .ab-group 
                                .titleimg 
                                    .image-cropper
                                        img(src = '/images/site/pas1.jpg' style='border-radius: 50% !important; margin: 5px;')
                                    .title2 Capsule
                                .quan 
                                    span Quantity: #{order.capsulesCount}
                                    span Price: (#{order.capsulesCount}-1free) x 30=Lei#{(order.capsulesCount-1)*30}  
                .section 
                    .title 
                    .content 
                        .ab-group 
                            .quan 
                                span 
                                span Total: #{order.amount/100} -#{order.discountPercentage}% Discount
                .section 
                    .title 
                    .content.ndcolor.total 
                        .ab-group 
                            .quan 
                                span 
                                span.ndtext Total: Lei#{(100-order.discountPercentage)/100 * order.amount/100}
                if order.status !='canceled'
                    .section 
                        .title Cancel Order
                        .content 
                            .ab-group 
                                a.cancelorder.btn.btn-prymary(href='/scents/cancelorder/'+order.id, style="border-radius: 10px;") Cancel Order
                                .quan 
                                    span 
                                    span Subscriptions you ordered with this order will be canceled too!