extends layout

block content
    .andu.andu-unfix
        .mainmyacc
            .container.myacc
                .header
                    .header-head
                        img(src='/images/user-alt.png')
                        .uinfo
                            span.name #{user.name} #{user.vorname}'s orders
                            span.datecreated Membru din #{user.dateCreated ? user.dateCreated.toLocaleDateString() : ' - '}
                .body
                    .section
                        .title Comenzi
                        .content.ordersid
                            for order in orders
                                .ab-group
                                    a.gotoorder(href='/myorders/'+order.id style='word-wrap: break-word; overflow-wrap: break-word; color: blue !important; text-decoration: none !important; color: white !important; background-color: #244891; border-radius: 10px; margin-top: 15px; padding: 5px;') ID: #{order.id}
                                    .title2 Email: #{order.email}
                                    .date.rowreverse #{order.dateCreated}
                                    //.subid.rowreverse Order id: #{order.id}
                                    if order.status == 'ordered'
                                        .other1 Comanda va fi livrată în 2, 3 zile
                                    else if order.status == 'canceled'
                                        .date.canceled(style='color: red !important;') Anulată
                                    else
                                        .other1 A fost livrată comanda!
                                    