extends layout

block content
    .form-container.register
        .modal-form(style='z-index: 2;')
            .content.container
                a.brand-logo(href='../') 
                    img.logoimg(src='../images/logo.png')
                form(method='post', action='/users/register', enctype='multipart/form-data')
                    .form-group
                        label Nume
                        input.form-control(name='name', type='text', placeholder='Nume')
                    .form-group
                        label Prenume
                        input.form-control(name='vorname', type='text', placeholder='Prenume')
                    .form-group
                        label Data Nasterii
                        input.form-control(name='birthdate', type='text', class="datepicker", placeholder='Data Nasterii')
                    .form-group
                        label E-mail
                        input.form-control(name='email', type='email', placeholder='E-mail')
                    .form-group
                        label Username
                        input.form-control(name='username', type='text', placeholder='Username')
                    .form-group
                        label Parola
                        input.form-control(name='password', type='password',
                     placeholder='parola')
                    .form-group
                        label Verificati Parola
                        input.form-control(name='password2', type='password',
                     placeholder='parola')
                    .form-group.imageupload(style='display: none !important;')
                        label Profile Image
                        input.form-control(name='profileimage', type='file')
                    input.btn.btn-prymary(type='submit', name ='submit', value='Creeaza cont')
                    .loginre
                        span Esti deja membru?
                        a(href='/users/login') Autentificare
                        a(href='/google' class="oauth-container btn darken-4 white black-text" style="text-transform:none; color: black !important; overflow: visible !important;")
                            .right
                                img(width="20px" style="margin-top:7px; margin-right:8px" alt="Google sign-in" 
                                    src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Google_%22G%22_Logo.svg/512px-Google_%22G%22_Logo.svg.png")
                            span Login with &nbsp;

                        form(method='post', action='/google', enctype='urlencoded')
                            input(type='submit' value='Google')
            .error-content
                if errors
                    div.alert.alert-danger #{errors[0].msg}