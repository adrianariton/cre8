extends layout

block content
  .scentsbody.sc
    h1.input #{input}
    if !user
      .logintobuy 
        span You need to&nbsp;
        a(href='/users/login') Log in
        span &nbsp;to buy!
    .buddy
      - var i = 0
      for scent in scents
        if i%2==0 && scents[i+1]
          .row.container
            .card(data-item-id=scents[i]._id)
              .imaromas
                img.image(src='/images/'+scents[i].image)
                .row
                  .bb
                    div.b1.b
                    span.a1 #{scents[i].aromas[0]}
                  .bb
                    div.b2.b
                    span.a2 #{scents[i].aromas[0]}
                  .bb
                    div.b3.b
                    span.a3 #{scents[i].aromas[1]}
                  .bb
                    div.b4.b
                    span.a4 #{scents[i].aromas[1]}
              div.name 
                h1 #{scents[i].name}
              span.desc #{scents[i].description.substr(0, 30)}...
              span.wh #{scents[i].description}
              //span.price Lei#{(scents[i].price/100).toFixed(2)} 
              span.readmore Read More
              if user? user.m_abonamentCart: null
              span.addtocart(class=user? (user.cart.includes(scents[i]._id) ? 'removefromcart': '') : '')
                i(class='material-icons') add_circle
            .card(data-item-id=scents[i+1]._id)
              .imaromas
                img.image(src='/images/'+scents[i+1].image)
                .row
                  .bb
                    div.b1.b
                    span.a1 #{scents[i+1].aromas[0]}
                  .bb
                    div.b2.b
                    span.a2 #{scents[i+1].aromas[0]}
                  .bb
                    div.b3.b
                    span.a3 #{scents[i+1].aromas[1]}
                  .bb
                    div.b4.b
                    span.a4 #{scents[i+1].aromas[1]}
              div.name  
                h1 #{scents[i+1].name}
              span.desc #{scents[i+1].description.substr(0, 30)}...
              span.wh #{scents[i+1].description}
              //span.price Lei#{(scents[i+1].price/100).toFixed(2)} 
              span.readmore Read More
              if user? user.m_abonamentCart: null
              span.addtocart(class=user? (user.cart.includes(scents[i+1]._id) ? 'removefromcart': '') : '')
                i(class='material-icons') add_circle
            
              
        - i++
      - i--
      if i%2 == 0  
        .row.container
          .card(data-item-id=scents[i]._id)
            .imaromas
              img.image(src='/images/'+scents[i].image)
              .row
                .bb
                  div.b1.b
                  span.a1 #{scents[i].aromas[0]}
                .bb
                  div.b2.b
                  span.a2 #{scents[i].aromas[0]}
                .bb
                  div.b3.b
                  span.a3 #{scents[i].aromas[1]}
                .bb
                  div.b4.b
                  span.a4 #{scents[i].aromas[1]}
            div.name 
              h1 #{scents[i].name}
            span.desc #{scents[i].description.substr(0, 30)}...
            span.wh #{scents[i].description}
            //span.price Lei#{(scents[i].price/100).toFixed(2)}  
            span.readmore Read More
            if user? user.m_abonamentCart: null
            span.addtocart(class=user? (user.cart.includes(scents[i]._id) ? 'removefromcart': '') : '')
              i(class='material-icons') add_circle
                          
          .card
            .imaromas
              img.image(src='/images/1.jpg')
              span.comingsoon Coming Soon!
            h1.name Sugerati-ne parfumuri!
            form
              input(type="text" placeholder='name')
              input(type="submit")
  if user
    script(type='text/javascript').
      const currentuser = '#{user.username}'
